{% extends 'base.html.twig' %}

{% block title %}Rights index{% endblock %}

{% block body %}
    <h1>Rights index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for right in rights %}
            <tr>
                <td>{{ right.id }}</td>
                <td>{{ right.name }}</td>
                <td>
                    <a href="{{ path('app_rights_show', {'id': right.id}) }}">show</a>
                    <a href="{{ path('app_rights_edit', {'id': right.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_rights_new') }}">Create new</a>
{% endblock %}
